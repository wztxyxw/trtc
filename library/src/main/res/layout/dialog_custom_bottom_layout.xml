<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/dialog_custom_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/dialog_bottom_left_btn"
        android:gravity="center"
        android:text="@android:string/cancel"
        android:textSize="@dimen/DIMEN_24PX"
        android:textColor="@color/cancel_text_color"/>

    <View
        android:layout_width="@dimen/divide_line_height"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dialog_line_margin_v"
        android:layout_marginTop="@dimen/dialog_line_margin_v"
        android:layout_weight="0"
        android:background="@color/line_color"
        />

    <TextView
        android:id="@+id/dialog_custom_yes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/dialog_bottom_right_btn"
        android:gravity="center"
        android:text="@android:string/yes"
        android:textSize="@dimen/DIMEN_24PX"
        android:textColor="@color/confirm_text_color"/>
</LinearLayout>
