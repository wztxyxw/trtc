<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_edit_dialog_bg"
    android:gravity="center">

    <TextView
        android:id="@+id/dialog_custom_title"
        android:layout_width="match_parent"
        android:gravity="center"
        style="@style/dialog_custom_title_text_style"
        android:text="Android App"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/popup_margin_1"
        android:textColor="@color/text_color_property"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/edittext_bg_edit_dialog"
        android:layout_marginTop="@dimen/popup_margin_1"
        android:layout_marginLeft="@dimen/dialog_content_margin_left"
        android:layout_marginRight="@dimen/dialog_content_margin_right"
        android:layout_marginBottom="10dp"
        >
        <EditText
            android:singleLine="true"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height"
            android:id="@+id/dialog_fence_details_name_edit"
            android:textCursorDrawable="@drawable/iconedittext_default_text_cursor_bg"
            android:textColor="@color/text_color_property"
            android:textColorHint="@color/popup_nick_name_hint_color"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:hint="@string/hint_fence_name_input"
            android:textSize="@dimen/title_text_size"/>
        <ImageView
            android:id="@+id/clear_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iconedittext_sample_right_image"
            android:padding="10dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/prompt_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/popup_nick_name_hint_color"
        android:text="@string/msg_not_null"
        android:visibility="gone"
        android:textSize="16dp" />
    <View
        style="@style/divide_line_style"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_custom_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/dialog_bottom_left_btn_edit"
            android:text="@android:string/cancel"
            android:textColor="@color/confirm_cancel_color"/>

        <View
            android:layout_width="@dimen/divide_line_height"
            android:layout_height="20dp"
            android:background="@color/line_color"
            android:layout_marginTop="@dimen/dialog_line_margin_v"
            android:layout_marginBottom="@dimen/dialog_line_margin_v"
            android:layout_weight="0"
            />
        <TextView
            android:id="@+id/dialog_custom_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/dialog_bottom_right_btn_edit"
            android:text="@android:string/yes"
            android:textColor="@color/confirm_cancel_color"/>
    </LinearLayout>
</LinearLayout>