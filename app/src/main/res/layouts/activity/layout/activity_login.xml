<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_login_header_bg"
            android:orientation="vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_50PX"
                android:layout_marginLeft="@dimen/DIMEN_50PX"
                android:layout_marginRight="@dimen/DIMEN_50PX"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_80PX"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/DIMEN_30PX"
                            android:layout_height="@dimen/DIMEN_30PX"
                            android:layout_marginLeft="@dimen/DIMEN_20PX"
                            android:layout_marginRight="@dimen/DIMEN_20PX"
                            android:src="@mipmap/ic_user_name"/>
                        <EditText
                            android:id="@+id/account"
                            style="@style/editText_style"
                            android:gravity="left|center"
                            android:inputType="text"
                            android:hint="请输入账号"
                            android:text="372423197612063625"
                            android:imeOptions="actionNext"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/c3"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_10PX"
                android:layout_marginLeft="@dimen/DIMEN_50PX"
                android:layout_marginRight="@dimen/DIMEN_50PX"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_80PX"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/DIMEN_30PX"
                            android:layout_height="@dimen/DIMEN_30PX"
                            android:layout_marginLeft="@dimen/DIMEN_20PX"
                            android:layout_marginRight="@dimen/DIMEN_20PX"
                            android:src="@mipmap/ic_password"/>
                        <EditText
                            android:id="@+id/password"
                            style="@style/editText_style"
                            android:gravity="left|center"
                            android:inputType="textPassword"
                            android:hint="请输入密码"
                            android:text="98776555"
                            android:imeOptions="actionDone"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/c3"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/login_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_60PX"
                    android:layout_margin="@dimen/DIMEN_50PX"
                    android:background="@drawable/login_btn_bg"
                    android:textColor="@color/c1"
                    android:text="登  录"
                    android:gravity="center"
                    android:textSize="@dimen/DIMEN_25PX"
                    />

                <TextView
                    android:id="@+id/login_btn1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_60PX"
                    android:layout_margin="@dimen/DIMEN_50PX"
                    android:background="@drawable/login_btn_bg"
                    android:textColor="@color/c1"
                    android:text="登  录1"
                    android:gravity="center"
                    android:textSize="@dimen/DIMEN_25PX"
   />
                <TextView
                    android:id="@+id/login_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_60PX"
                    android:layout_margin="@dimen/DIMEN_50PX"
                    android:background="@drawable/login_btn_bg"
                    android:textColor="@color/c1"
                    android:text="登  录2"
                    android:gravity="center"
                    android:textSize="@dimen/DIMEN_25PX"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wait_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/c1"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_wait"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_50PX"
            android:text="正在等待接听…"
            android:textColor="#fff25858"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/login_out_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_60PX"
                android:layout_margin="@dimen/DIMEN_50PX"
                android:background="@drawable/login_btn_bg"
                android:textColor="@color/c1"
                android:text="退出登录"
                android:gravity="center"
                android:textSize="@dimen/DIMEN_25PX"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>