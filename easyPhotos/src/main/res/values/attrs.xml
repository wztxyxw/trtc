<resources>

    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="PuzzleView">
        <attr name="line_size" format="integer" />
        <attr name="line_color" format="color" />
        <attr name="selected_line_color" format="color" />
        <attr name="handle_bar_color" format="color" />
        <attr name="need_draw_line" format="boolean" />
        <attr name="need_draw_outer_line" format="boolean" />
        <attr name="piece_padding" format="dimension" />
        <attr name="animation_duration" format="integer" />
        <attr name="radian" format="float" />
    </declare-styleable>

    <attr format="reference" name="cropImageStyle"/>

    <declare-styleable name="CropImageView">
        <attr format="reference|color" name="highlightColor"/>
        <attr format="boolean" name="showThirds"/>
        <attr format="boolean" name="showCircle"/>
        <attr name="showHandles">
            <enum name="changing" value="0"/>
            <enum name="always" value="1"/>
            <enum name="never" value="2"/>
        </attr>
    </declare-styleable>
</resources>
